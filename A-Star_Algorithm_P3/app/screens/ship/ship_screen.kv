#:kivy 2.3.1
<ShipScreen>:
    name: "ship_screen"

    BoxLayout:
        orientation: "vertical"

        # Top header bar
        BoxLayout:
            size_hint_y: None     # give a fixed height
            height: dp(400)
            padding: dp(10)
            spacing: dp(10)

            BoxLayout:
                orientation: "vertical"
                
                InstructionLabel:
                    id: instruction_label

            Button:
                text: "Go back"
                on_press: root.manager.current = "input_screen"
                size_hint_x: 0.2   # limit width
                size_hint_y: 0.2     # fill only vertically inside header
            
            # button right spacing
            BoxLayout:
                size_hint_x: None
                width: dp(50)

        # The grid area
        BoxLayout:
            orientation: "horizontal"
            size_hint_x: 1
            padding: dp(50), 0
            spacing: dp(10)

            GridLayout:
                size_hint_x: 0.8
                id: grid
                size_hint: 1, 1        # fill the rest
                spacing: 2
                padding: 2
        
        # bottom spacing
        BoxLayout:
            size_hint_y: None
            height: dp(50)
            padding: dp(10)
            spacing: dp(10)

<InstructionLabel>:
    font_size: 32
    color: 1, 1, 1, 1

<ContainerBox>:
    size_hint: None, None

    canvas.before:
        Color:
            rgba: self.bg_color
        Rectangle:
            pos: self.pos
            size: self.size 
    Label: 
        font_size: 24
        color: root.weight_color
        text: str(root.weight)
        center: root.center